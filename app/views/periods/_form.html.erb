<%= form_for([@shop, @period]) do |f| %>
  <% if @period.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul>
      <% @period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :limit_time %><br>
    <%= f.time_select :limit_time %>
  </div>
  <div class="field">
    <%= f.label :days_off %><br>
    <div class="multiselect">
        <%= f.select :days_off, options_for_select(Period::DAYS, :selected => @period.days_off), {:include_blank => false}, {:multiple => true} %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
$(".multiselect").multiselect({
   noneSelectedText: "Selecione...",
   selectedList: 3,
   header: false
});
</script>
