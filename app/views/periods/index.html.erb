<% content_for :title, 'Períodos de Entrega' %>

<% content_for :actions do %>
  <%= link_to 'Novo Período de Entrega', new_shop_period_path(@shop),
      class: 'btn btn-success' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th style="width: 70px" \>
      <th>Nome</th>
      <th>Hora de corte</th>
      <th>Dias inativos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td \>
        <td><%= link_to period.name, edit_shop_period_path(@shop, period) %></td>
        <td><%= period.limit_time.strftime("%H:%M ") %></td>
        <td>
          <% if period.days_off.present? %>
            <% period.days_off.each do |p| %>
              <%= p %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to_destroy shop_period_path(@shop, period) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

