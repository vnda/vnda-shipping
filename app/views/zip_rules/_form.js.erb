$("#zip-rules-form .zip-messages").html('');

<% if @zip_rule.errors.empty? %>
  $("#zip-rules-form .zip-messages").append("<%= escape_javascript(render 'shared/flash_messages') %>");  
<% else %>
  $("#zip-rules-form .zip-messages").append("<%= escape_javascript(render 'shared/error_messages', :resource => @zip_rule) %>");  
<% end %>
