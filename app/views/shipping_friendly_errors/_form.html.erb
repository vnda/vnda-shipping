<%= form_for [@shop, @shipping_friendly_error], html: { id: 'shipping_method_form' } do |f| %>
  <%= render 'shared/error_messages', resource: @shipping_friendly_error %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :rule %>
        <%= f.text_field :rule, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :message %>
        <%= f.text_field :message, class: 'form-control' %>
      </div>
    </div>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  <%= link_to 'Cancelar', shop_shipping_friendly_errors_path(@shop), class: 'btn btn-default' %>
<% end %>

