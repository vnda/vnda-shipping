<div class="row zip-codes-header">
  <div class="col-md-2 zip-code">CEP Início</div>
  <div class="col-md-2 zip-code">CEP Fim</div>
  <div class="col-md-2 price">Preço</div>
  <div class="col-md-2 deadline">Prazo</div>
  <% unless @shop.periods.empty?  %>
    <div class="col-md-2 period">Período</div>
  <% end %>
  <div class="col-md-2"></div>
</div>

<div id="zip-rules-container" class="row">
  <% @zip_rules.each do |zip_rule| %>
    <%= render 'zip_rule_form', zip_rule: zip_rule %>
  <% end %>
</div>

<div class="row">
  <%= paginate(@zip_rules, remote: true) if @zip_rules.respond_to?(:total_pages) %>
</div>
