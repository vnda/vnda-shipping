<%= form_for([@shop, @period]) do |f| %>

  <%= render 'shared/error_messages', resource: @period %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <%= f.label :limit_time %>
        <%= f.time_select :limit_time, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-10">
      <div class="form-group">
        <%= f.label :days_off %>
        <div class="multiselect">
          <%= f.select :days_off, options_for_select(Period::DAYS, :selected => @period.days_off), {:include_blank => false}, {:multiple => true} %>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-primary' %>
  <%= link_to 'Cancelar', shop_periods_path(@shop), class: 'btn btn-default' %>

<% end %>

<script>
$(".multiselect").multiselect({
   noneSelectedText: "Selecione...",
   selectedList: 3,
   header: false
});
</script>
